        <style>
                      :root {
                --background-color: #f5f5f5;
                --container-background: white;
                --text-color: #333;
                --heading-color: #2c3e50;
                --status-background: #ecf0f1;
                --time-background: #f8f9fa;
                --link-color: #3498db;
                --box-shadow: 0 4px 6px rgba(0,0,0,0.1);
                --time-border: #3498db;
            }

            /* Dark mode */
            @media (prefers-color-scheme: dark) {
                :root {
                    --background-color: #1a1a1a;
                    --container-background: #2d2d2d;
                    --text-color: #e0e0e0;
                    --heading-color: #9cc4e4;
                    --status-background: #3d3d3d;
                    --time-background: #363636;
                    --link-color: #61dafb;
                    --box-shadow: 0 4px 6px rgba(0,0,0,0.3);
                    --time-border: #61dafb;
                }
            }

            body {
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                margin: 0;
                padding: 40px;
                background: var(--background-color);
                color: var(--text-color);
            }
            .container {
                max-width: 800px;
                margin: 0 auto;
                background: var(--container-background);
                padding: 40px;
                border-radius: 15px;
                box-shadow: var(--box-shadow);
            }
            h1 {
                text-align: center;
                color: var(--heading-color);
                font-size: 36px;
                margin-bottom: 40px;
            }
            .status {
                font-size: 28px;
                font-weight: bold;
                margin: 30px 0;
                padding: 20px;
                border-radius: 10px;
                text-align: center;
                background: var(--status-background);
                position: relative;
            }
            .status .tooltip {
                font-size: 12px;
                visibility: hidden;
                width: 200px;
                background-color: var(--container-background);
                color: var(--text-color);
                text-align: center;
                border-radius: 6px;
                padding: 5px;
                position: absolute;
                z-index: 1;
                bottom: 125%;
                left: 50%;
                margin-left: -100px;
                opacity: 0;
                transition: opacity 0.3s;
            }
            .status:hover .tooltip {
                visibility: visible;
                opacity: 1;
            }
            .time {
                font-size: 20px;
                margin: 20px 0;
                padding: 15px;
                border-left: 4px solid var(--time-border);
                background: var(--time-background);
            }
            .nav-links {
                text-align: center;
                margin: 20px 0;
            }
            .nav-links a {
                color: var(--link-color);
                text-decoration: none;
                margin: 0 10px;
            }
            .nav-links a:hover {
                text-decoration: underline;
            }
            footer {
                text-align: center;
                margin-top: 100px;
                font-size: 12px;
            }
        </style>
    </head>
